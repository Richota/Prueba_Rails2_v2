<div class="jumbotron">
  <h1 class="display-6">Ven, Te desafio a realizar estas pruebas dieciocheras!</h1>
</div>

<br>

<div class="row">
    <% @tasks.each do |task| %>
      <div class="card text-white bg-primary col-sm-12 col-md-4">
        <h3><%= task.name %></h3>
          <%= image_tag task.photo, class: "img-fluid img-thumbnail" %>
          <br>
          <p><%= link_to 'Detalle', task, class: "btn btn-primary" %> </p>

          <% if !@readies.exists?(user_id: current_user.id, task_id: task.id) %>

          <%= link_to 'Completar', task_readies_path(task.id), method: :post, class: "btn btn-success" %>
          <% else %>
          <%= link_to "Deshacer", ready_path(@readies.find_by(user_id: current_user.id, task_id: task.id)), method: :delete, data: { confirm: 'EstÃ¡s seguro que desea deshacer la tarea?' }, class: "btn btn-danger" %>
          <p>Completado!</p>
          <% end %>
      </div>
  <% end %>
    <br>

</div>
